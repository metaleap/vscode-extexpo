{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "out",
        "lib": [
            "es2017"
        ],
        "sourceMap": true,
        "alwaysStrict": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": false,
        "pretty": true,
        "removeComments": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "."
    },
    "exclude": [
        "node_modules"
    ]
}
